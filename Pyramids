#include <iostream>
using namespace std;
int main() {
    int rows;
    cout << "Enter number of rows: ";
    cin >> rows;

    for (int i = 1; i <= rows; i++) {
        // print stars in each row
        for (int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl; // move to next line after printing stars
    }
    return 0;
}
